{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "lib": ["ES2015", "DOM"],
    "stripInternal": true,
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "docs", "dist"]
}
