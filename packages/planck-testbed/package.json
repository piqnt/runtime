{
  "name": "planck-testbed",
  "version": "0.0.5",
  "description": "Testbed for Planck.js",
  "homepage": "https://github.com/piqnt/runtime",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/piqnt/runtime.git"
  },
  "author": "Ali Shakiba",
  "type": "module",
  "module": "dist/planck-testbed.js",
  "main": "dist/planck-testbed.js",
  "types": "dist/planck-testbed.d.ts",
  "exports": {
    "./v1": {
      "types": "./dist/planck-testbed.d.ts",
      "import": "./dist/planck-testbed.js",
      "default": "./dist/planck-testbed.umd.cjs"
    },
    "./v2": {
      "types": "./dist/planck-testbed.d.ts",
      "import": "./dist/planck-testbed.js",
      "default": "./dist/planck-testbed.umd.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=24.0"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "minimatch": "^10.1.2",
    "polymatic": "^0.0.12",
    "stage-js": "^1.0.1"
  },
  "peerDependencies": {
    "planck": "^1.4.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "rollup-plugin-license": "^3.6.0",
    "tsd": "^0.33.0",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.54.0",
    "unplugin-dts-bundle-generator": "^3.3.0",
    "vite": "^6.4.1",
    "vite-plugin-typescript": "^1.0.4",
    "vite-plugin-typescript-transform": "^1.3.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "lint": "eslint './src/**/*.ts'",
    "pretty": "prettier --write './src/**/*.ts'",
    "test": "vitest run",
    "preflight": "pnpm run lint && pnpm run test:types && pnpm run test",
    "dev": "vite",
    "prepack": "pnpm build",
    "build": "vite build",
    "watch": "vite build --watch",
    "preview": "vite preview"
  }
}
